<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_show</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="AppTheme.TextViewResponsive">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:drawablePadding">@dimen/size_8</item>
    </style>

    <style name="AppTheme.Content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@color/text_content_default</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="AppTheme.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_12</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="AppTheme.Tile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="AppTheme.TextViewResponsive.Title">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>

    <style name="AppTheme.TextViewResponsive.MultiLine">
        <item name="android:maxLines">5</item>
        <item name="android:minLines">3</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="AppTheme.TextViewResponsive.AutoSize">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:autoSizeMaxTextSize">@dimen/text_size_14</item>
        <item name="android:autoSizeMinTextSize">@dimen/text_size_8</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="AppTheme.TextViewResponsive.Hint">
        <item name="android:textColor">@color/color_7e7e7e</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_height">@dimen/height_of_edit_text</item>
        <item name="android:paddingStart">@dimen/size_16</item>
        <item name="android:paddingEnd">@dimen/size_16</item>
        <item name="android:minHeight">@dimen/size_40</item>
        <item name="android:minWidth">@dimen/size_100</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/radius_default</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="AppTheme.Button.Responsive">
        <item name="android:singleLine">false</item>
    </style>


    <style name="AppTheme.Button.OutLine" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_height">@dimen/height_of_edit_text</item>
        <item name="android:paddingStart">@dimen/size_16</item>
        <item name="android:paddingEnd">@dimen/size_16</item>
        <item name="android:minWidth">@dimen/size_100</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">@dimen/radius_default</item>
    </style>

    <style name="AppTheme.Button.Circle">
        <item name="cornerRadius">@dimen/size_60</item>
    </style>

    <!--============= Declare style Edit Text =============-->
    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">@dimen/size_10</item>
        <item name="android:background">@drawable/bg_edittext_round</item>
        <item name="android:layout_height">@dimen/height_of_edit_text</item>
        <item name="android:inputType">text</item>
        <item name="colorControlActivated">@color/color_primary</item>
        <item name="android:textColorHint">@color/gray18</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="AppTheme.EditText.MultiLine">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:gravity">start</item>
        <item name="android:minLines">3</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="MyBottomNavigationView.TextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:layout_marginTop">@dimen/size_10</item>
    </style>


    <style name="OTPView">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:background">@drawable/bg_otp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--========Line============-->
    <style name="AppTheme.Line">
        <item name="android:background">#E5E5E5</item>
    </style>

    <style name="AppTheme.Line.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="AppTheme.Line.Vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.Line.Vertical.Title">
        <item name="android:layout_width">5dp</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="ClickableView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="AppTheme.Spinner" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:background">@color/white</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_50</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:paddingEnd">@dimen/size_5</item>
        <item name="android:paddingStart">@dimen/size_5</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:popupElevation">0dp</item>
    </style>

    <style name="corner_5_top_left_bottom_right">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerSizeBottomRight">5dp</item>
    </style>

    <style name="Text12BlackNormal">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text12BlackAnuphan">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ItemFilter" parent="@style/AppTheme.Content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_40</item>
        <item name="android:background">@drawable/bg_it_fillter</item>
        <item name="android:layout_marginTop">@dimen/size_15</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/size_15</item>
        <item name="android:drawableRight">@drawable/ic_next</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginLeft">@dimen/size_7</item>
    </style>

    <style name="Text14BlackAnuphan">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text14PrimaryAnuphan">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="circleImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Text10BackAnuphan">
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text10PrimaryAnuphan">
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Text10WhiteAnuphan">
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text12OrangeED970EAnuphan">
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@color/orange_ed970e</item>
    </style>

    <style name="Text17BlackAnuphan">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text12Gray6F6F6FAnuphan">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/gray_6f6f6f</item>
    </style>

    <style name="Text14WhiteAnuphan">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.Button.StyleButton" >
        <item name="android:layout_marginTop">@dimen/size_15</item>
        <item name="android:layout_height">@dimen/size_40</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:paddingHorizontal">@dimen/size_20</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/AppTheme.Content</item>
    </style>

    <style name="LineHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size_1</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="FocusClick">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>
</resources>